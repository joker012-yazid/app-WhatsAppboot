generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(uuid())
  name            String
  email           String             @unique
  passwordHash    String
  role            UserRole           @default(USER)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  approvedAt      DateTime?
  approvedBy      String?
  isActive        Boolean            @default(true)
  lastLoginAt     DateTime?
  permissions     Json?
  status          String             @default("ACTIVE")
  username        String?            @unique
  campaigns       Campaign[]
  campaignPresets CampaignPreset[]
  deletedUsers    DeletedUserAudit[] @relation("DeletedByUser")
  ownedJobs       Job[]              @relation("JobOwner")
  refreshTokens   RefreshToken[]
  sessions        Session[]
  systemSettings  SystemSetting[]

  @@index([status])
  @@index([role])
  @@index([isActive])
}

model Session {
  id            String         @id @default(uuid())
  userId        String
  userAgent     String?
  ipAddress     String?
  createdAt     DateTime       @default(now())
  expiresAt     DateTime
  revokedAt     DateTime?
  refreshTokens RefreshToken[]
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  sessionId String
  createdAt DateTime  @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  session   Session   @relation(fields: [sessionId], references: [id])
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id                 String              @id @default(uuid())
  name               String
  phone              String              @unique
  email              String?
  notes              String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  tags               String[]            @default([])
  type               CustomerType        @default(REGULAR)
  campaignRecipients CampaignRecipient[]
  devices            Device[]
  jobs               Job[]
  messages           Message[]
}

model Message {
  id         String           @id @default(uuid())
  customerId String
  direction  MessageDirection
  content    String
  status     MessageStatus    @default(SENT)
  sentAt     DateTime?
  receivedAt DateTime?
  readAt     DateTime?
  createdAt  DateTime         @default(now())
  customer   Customer         @relation(fields: [customerId], references: [id])

  @@index([customerId])
  @@index([createdAt])
}

model Device {
  id           String   @id @default(uuid())
  customerId   String
  deviceType   String
  brand        String?
  model        String?
  serialNumber String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  customer     Customer @relation(fields: [customerId], references: [id])
  jobs         Job[]
}

model Job {
  id             String             @id @default(uuid())
  customerId     String
  deviceId       String
  title          String
  description    String?
  status         JobStatus          @default(AWAITING_QUOTE)
  priority       JobPriority        @default(NORMAL)
  quotedAmount   Decimal?
  approvedAmount Decimal?
  diagnosis      String?
  dueDate        DateTime?
  qrToken        String             @unique
  qrExpiresAt    DateTime?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  assignedAt     DateTime?
  ownerUserId    String?
  customer       Customer           @relation(fields: [customerId], references: [id])
  device         Device             @relation(fields: [deviceId], references: [id])
  owner          User?              @relation("JobOwner", fields: [ownerUserId], references: [id])
  messages       JobMessage[]
  photos         JobPhoto[]
  history        JobStatusHistory[]
  reminders      Reminder[]
}

model JobStatusHistory {
  id        String    @id @default(uuid())
  jobId     String
  status    JobStatus
  notes     String?
  createdAt DateTime  @default(now())
  job       Job       @relation(fields: [jobId], references: [id])
}

model JobPhoto {
  id        String   @id @default(uuid())
  jobId     String
  label     String?
  filePath  String
  createdAt DateTime @default(now())
  job       Job      @relation(fields: [jobId], references: [id])
}

model JobMessage {
  id        String      @id @default(uuid())
  jobId     String
  role      MessageRole
  content   String
  createdAt DateTime    @default(now())
  job       Job         @relation(fields: [jobId], references: [id])
}

model AiConversation {
  id         String      @id @default(uuid())
  jobId      String?
  customerId String?
  createdAt  DateTime    @default(now())
  messages   AiMessage[]
}

model AiMessage {
  id             String         @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String
  createdAt      DateTime       @default(now())
  conversation   AiConversation @relation(fields: [conversationId], references: [id])
}

model Reminder {
  id     String       @id @default(uuid())
  jobId  String
  kind   ReminderKind
  sentAt DateTime?
  job    Job          @relation(fields: [jobId], references: [id])

  @@index([jobId, kind])
}

model Campaign {
  id                 String              @id @default(uuid())
  name               String
  kind               CampaignKind        @default(PROMOTIONAL)
  status             CampaignStatus      @default(DRAFT)
  message            String
  mediaUrl           String?
  variables          String[]            @default([])
  filters            Json?
  scheduledFor       DateTime?
  startedAt          DateTime?
  completedAt        DateTime?
  targetCount        Int                 @default(0)
  sentCount          Int                 @default(0)
  failedCount        Int                 @default(0)
  dailyLimit         Int                 @default(150)
  randomDelayMin     Int                 @default(30)
  randomDelayMax     Int                 @default(60)
  businessHoursStart Int?
  businessHoursEnd   Int?
  createdById        String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          User?               @relation(fields: [createdById], references: [id])
  events             CampaignEvent[]
  recipients         CampaignRecipient[]

  @@index([status, createdAt])
}

model CampaignRecipient {
  id            String                  @id @default(uuid())
  campaignId    String
  customerId    String?
  phone         String
  name          String?
  status        CampaignRecipientStatus @default(PENDING)
  error         String?
  attempts      Int                     @default(0)
  lastAttemptAt DateTime?
  sentAt        DateTime?
  deliveredAt   DateTime?
  readAt        DateTime?
  respondedAt   DateTime?
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  campaign      Campaign                @relation(fields: [campaignId], references: [id])
  customer      Customer?               @relation(fields: [customerId], references: [id])

  @@index([campaignId, status])
  @@index([campaignId, createdAt])
  @@index([campaignId, phone])
}

model CampaignPreset {
  id          String   @id @default(uuid())
  name        String
  description String?
  filters     Json
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User?    @relation(fields: [createdById], references: [id])
}

model CampaignEvent {
  id         String   @id @default(uuid())
  campaignId String
  type       String
  details    Json?
  createdAt  DateTime @default(now())
  campaign   Campaign @relation(fields: [campaignId], references: [id])
}

model SystemSetting {
  id          String   @id @default(uuid())
  key         String   @unique
  group       String?
  value       Json
  updatedById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedBy   User?    @relation(fields: [updatedById], references: [id])
}

model DeletedUserAudit {
  id             String    @id @default(uuid())
  originalUserId String    @unique
  username       String?
  email          String?
  name           String?
  role           UserRole?
  status         String?
  deletedAt      DateTime  @default(now())
  deletedById    String
  reason         String?
  ownedJobsCount Int       @default(0)
  campaignsCount Int       @default(0)
  dataSnapshot   Json?
  deletedBy      User      @relation("DeletedByUser", fields: [deletedById], references: [id])

  @@index([deletedAt])
  @@index([deletedById])
}

enum UserRole {
  ADMIN
  USER
}

enum CustomerType {
  VIP
  REGULAR
  NEW
  PROSPECT
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
  RECEIVED
}

enum JobStatus {
  AWAITING_QUOTE
  QUOTATION_SENT
  APPROVED
  CANCELLED
  REPAIRING
  COMPLETED
}

enum JobPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum MessageRole {
  SYSTEM
  USER
  ASSISTANT
  AGENT
}

enum ReminderKind {
  QUOTE_DAY_1
  QUOTE_DAY_20
  QUOTE_DAY_30
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  FAILED
  CANCELLED
}

enum CampaignKind {
  PROMOTIONAL
  ANNOUNCEMENT
  FOLLOW_UP
  CUSTOM
}

enum CampaignRecipientStatus {
  PENDING
  SCHEDULED
  SKIPPED
  SENT
  DELIVERED
  FAILED
  CANCELLED
}
