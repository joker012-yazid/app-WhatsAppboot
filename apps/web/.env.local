# Use Next.js API proxy route to avoid Mixed Content errors with HTTPS
# The /api route will proxy requests to the backend API server
# Leave empty since API paths already include /api prefix
NEXT_PUBLIC_API_BASE_URL=

# Backend API URL (used by Next.js proxy route on server-side)
# Use localhost for local development
API_BACKEND_URL=http://localhost:4000

# Public registration URL (for QR codes)
# This is the domain customers use to access registration page
NEXT_PUBLIC_REGISTRATION_BASE_URL=https://pendaftaran.laptoppro.my
