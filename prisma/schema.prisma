generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TECHNICIAN
  CASHIER
  MANAGER
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  passwordHash   String
  role           UserRole        @default(TECHNICIAN)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  sessions       Session[]
  refreshTokens  RefreshToken[]
  campaigns      Campaign[]
  campaignPresets CampaignPreset[]
  systemSettings SystemSetting[]
}

model Session {
  id          String          @id @default(uuid())
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  userAgent   String?
  ipAddress   String?
  createdAt   DateTime        @default(now())
  expiresAt   DateTime
  revokedAt   DateTime?
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          String    @id @default(uuid())
  tokenHash   String    @unique
  userId      String
  sessionId   String
  user        User      @relation(fields: [userId], references: [id])
  session     Session   @relation(fields: [sessionId], references: [id])
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  revokedAt   DateTime?
}

enum CustomerType {
  VIP
  REGULAR
  NEW
  PROSPECT
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  email     String?
  notes     String?
  type      CustomerType @default(REGULAR)
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices   Device[]
  jobs      Job[]
  messages  Message[]
  campaignRecipients CampaignRecipient[]
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
  RECEIVED
}

model Message {
  id          String           @id @default(uuid())
  customerId  String
  customer    Customer         @relation(fields: [customerId], references: [id])
  direction   MessageDirection
  content     String
  status      MessageStatus    @default(SENT)
  sentAt      DateTime?
  receivedAt  DateTime?
  readAt      DateTime?
  createdAt   DateTime         @default(now())
  
  @@index([customerId])
  @@index([createdAt])
}

enum JobStatus {
  PENDING
  QUOTED
  APPROVED
  REJECTED
  IN_PROGRESS
  COMPLETED
}

enum JobPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model Device {
  id           String   @id @default(uuid())
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id])
  deviceType   String
  brand        String?
  model        String?
  serialNumber String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  jobs         Job[]
}

model Job {
  id             String      @id @default(uuid())
  customerId     String
  deviceId       String
  customer       Customer    @relation(fields: [customerId], references: [id])
  device         Device      @relation(fields: [deviceId], references: [id])
  title          String
  description    String?
  status         JobStatus   @default(PENDING)
  priority       JobPriority @default(NORMAL)
  quotedAmount   Decimal?
  approvedAmount Decimal?
  diagnosis      String?
  dueDate        DateTime?
  qrToken        String      @unique
  qrExpiresAt    DateTime?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  history        JobStatusHistory[]
  photos         JobPhoto[]
  messages       JobMessage[]
  reminders      Reminder[]
}

model JobStatusHistory {
  id        String    @id @default(uuid())
  jobId     String
  job       Job       @relation(fields: [jobId], references: [id])
  status    JobStatus
  notes     String?
  createdAt DateTime  @default(now())
}

model JobPhoto {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  label     String?
  filePath  String
  createdAt DateTime @default(now())
}

enum MessageRole {
  SYSTEM
  USER
  ASSISTANT
  AGENT
}

model JobMessage {
  id        String      @id @default(uuid())
  jobId     String
  job       Job         @relation(fields: [jobId], references: [id])
  role      MessageRole
  content   String
  createdAt DateTime    @default(now())
}

model AiConversation {
  id        String   @id @default(uuid())
  jobId     String?
  customerId String?
  createdAt DateTime @default(now())
  messages  AiMessage[]
}

model AiMessage {
  id        String        @id @default(uuid())
  conversationId String
  conversation   AiConversation @relation(fields: [conversationId], references: [id])
  role      MessageRole
  content   String
  createdAt DateTime      @default(now())
}

enum ReminderKind {
  QUOTE_DAY_1
  QUOTE_DAY_20
  QUOTE_DAY_30
}

model Reminder {
  id        String       @id @default(uuid())
  jobId     String
  job       Job          @relation(fields: [jobId], references: [id])
  kind      ReminderKind
  sentAt    DateTime     @default(now())

  @@index([jobId, kind])
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  FAILED
  CANCELLED
}

enum CampaignKind {
  PROMOTIONAL
  ANNOUNCEMENT
  FOLLOW_UP
  CUSTOM
}

enum CampaignRecipientStatus {
  PENDING
  SCHEDULED
  SKIPPED
  SENT
  DELIVERED
  FAILED
  CANCELLED
  // TODO(status-consistency): consider introducing PROCESSING/QUEUED to reflect in-flight sends consistently.
}

model Campaign {
  id                String             @id @default(uuid())
  name              String
  kind              CampaignKind       @default(PROMOTIONAL)
  status            CampaignStatus     @default(DRAFT)
  message           String
  mediaUrl          String?
  variables         String[]           @default([])
  filters           Json?
  scheduledFor      DateTime?
  startedAt         DateTime?
  completedAt       DateTime?
  targetCount      Int                @default(0)
  sentCount        Int                @default(0)
  failedCount      Int                @default(0)
  dailyLimit        Int                @default(150)
  randomDelayMin    Int                @default(30)
  randomDelayMax    Int                @default(60)
  businessHoursStart Int?
  businessHoursEnd  Int?
  createdById       String?
  createdBy         User?              @relation(fields: [createdById], references: [id])
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  recipients        CampaignRecipient[]
  events            CampaignEvent[]

  @@index([status, createdAt])
}

model CampaignRecipient {
  id          String                   @id @default(uuid())
  campaignId  String
  campaign    Campaign                 @relation(fields: [campaignId], references: [id])
  customerId  String?
  customer    Customer?                @relation(fields: [customerId], references: [id])
  phone       String
  name        String?
  status      CampaignRecipientStatus  @default(PENDING)
  error       String?
  attempts    Int                      @default(0)
  lastAttemptAt DateTime?
  sentAt      DateTime?
  deliveredAt DateTime?
  // TODO(legacy): read tracking appears unused in codebase; validate before removal.
  readAt      DateTime?
  // TODO(legacy): response tracking appears unused; candidate for cleanup after audit.
  respondedAt DateTime?
  createdAt   DateTime                 @default(now())
  updatedAt   DateTime                 @updatedAt

  @@index([campaignId, status])
  @@index([campaignId, createdAt])
  @@index([campaignId, phone])
}

model CampaignPreset {
  id          String   @id @default(uuid())
  name        String
  description String?
  filters     Json
  createdById String?
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CampaignEvent {
  id          String   @id @default(uuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  type        String
  details     Json?
  createdAt   DateTime @default(now())
}
model SystemSetting {
  id          String   @id @default(uuid())
  key         String   @unique
  group       String?
  value       Json
  updatedById String?
  updatedBy   User?    @relation(fields: [updatedById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

